<h1>Mantenimiento de Profesores</h1>

<div class="centered">
  <%= paginate @professors %>
</div>

<table class="table">
  <tr>
    <th>Codigo</th>
    <th>Nombre</th>
    <th colspan=3>Opciones</th>
  </tr>

<% @professors.each do |professor| %>
  <tr>
    <td><%= professor.code %></td>
    <td><%= link_to "#{professor.lastname}, #{professor.name}", professor %></td>
   <% if can? :update, professor %>
      <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
    <% end %>
    <% if can? :destroy, professor %>
      <td><%= link_to 'Eliminar', professor, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    <% end %>    
    
  </tr>
<% end %>
</table>

<div class="centered">
  <%= paginate @professors %>
</div>

<br />

<% if can? :create, @professor %>
  <%= link_to 'Nuevo Profesor', new_professor_path, :class => 'btn btn-primary' %>
<% end %>
<%= link_to 'Buscar Profesor', {controller: "professors" ,action: "search"}, :class => 'btn btn-primary' %>
