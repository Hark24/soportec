<div class="span4 centered">
  <%= form_for(@state) do |f| %>
    <% if @state.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@state.errors.count, "error") %> no pudo ser creado:</h2>

        <ul>
        <% @state.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :description,"Disponibilidad:" %><br />
      <%= f.select(:description, options_for_select([['Seleccione Disponibilidad', 1],['Libre', 'Libre'], ['En Mantenimiento', 'En Mantenimiento'], ['En Clase', 'En Clase']],1)) %>
    </div>

    <div class="field">
      <%= f.label :laboratory_id,"Laboratorio:" %><br />
      <%= f.collection_select :laboratory_id, @laboratory, :id, :id, {:prompt => "Seleccione un laboratorio" }%>
    </div>

    <div class="actions">
      <%= f.submit "Ingresar", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
