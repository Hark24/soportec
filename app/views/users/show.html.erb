<% if notice.present? %>
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= notice %>
    </div>
<% end %>

<h1>Detalles del usuario</h1>
<div class="span4 centered">
    <div class="text-centered">
        <img src="http://www.wiisworld.com/images/news/pokemon.jpg"/>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td><%= @user.name %></td>
            </tr>
            <tr>
                <th>Código</th>
                <td><%= @user.code %></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <th>Username</th>
                <td><%= @user.username %></td>
            </tr>
            <tr>
                <th>Laboratorio</th>
                <td><%= "Sin Laboratorio" %></td>
            </tr>
            <% role = @user.role == nil ? "No tiene rol asignado" : @user.role[:name] %>
             <tr>
                <th>Rol</th>
                <td><%= role %></td>
            </tr>
            <tr>
                <th>Último Ingreso</th>
                <td><%= @user.last_sign_in_at %></td>
            </tr>
        </tbody>
    </table>

    <div class="button-container">
        <% if can? :editar, @user %>
        <div class="button">
            <%= link_to 'Editar ', edit_user_path(@user), :class => 'btn btn-primary'%>
        </div>
        <% end %>        
        <div class="button">
            <%= link_to 'Volver', manage_users_path, :class=> 'btn'  %>
        </div>
    </div>
</div>
