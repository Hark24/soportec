<div class="span6 centered panel">
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <h1>Nuevo Usuario</h1>
    <div class="control-group">
      <%= f.label :email, "E-mail:", :class => "control-label" %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true %>
      </div>
    </div>
  
    <div class="control-group">
      <%= f.label :code, "Código:", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :code %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, "Nombre:", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, "Contraseña:", :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, "Confirmación de contraseña:", :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="button-container">
      <div class="button">
        <%= f.submit "Aceptar", :class => "btn btn-primary" %>
      </div>
      <span>ó</span>
      <div class="button">
        <%= link_to  "Cancelar", root_path %>
      </div>
    </div>
  <% end %>

</div>